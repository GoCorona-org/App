<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <simplifii.framework.widgets.CustomFontTextView
                android:id="@+id/tv_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tell_symptoms"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="340px"
                android:layout_height="340px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/aisymp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Please check if you have any of the following symptoms" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light_1" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    style="@style/checkboxStyle"
                    android:checked="true"
                    android:text="Headache" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light_1" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    style="@style/checkboxStyle"
                    android:text="Chills" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light_1" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    style="@style/checkboxStyle"
                    android:text="Nausea" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light_1" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    style="@style/checkboxStyle"
                    android:text="Vomiting or vomit like feeling" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light_1" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    style="@style/checkboxStyle"
                    android:text="Diarrhea" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light_1" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    style="@style/checkboxStyle"
                    android:text="Conjunctival Congestion" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light_1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>